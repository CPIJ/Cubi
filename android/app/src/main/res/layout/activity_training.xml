<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Training.TrainingActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="231dp"
        android:layout_marginBottom="34dp"
        android:text="Emoties"
        android:textColor="@color/blue"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_toggle_training_happy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_toggle_training_sad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="301dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="163dp"
        app:layout_constraintBottom_toTopOf="@+id/button_stop_trainingmodus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_toggle_training_angry"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/blueEmotie" />

    <ImageButton
        android:id="@+id/button_toggle_training_happy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="165dp"
        app:layout_constraintBottom_toTopOf="@+id/button_stop_trainingmodus"
        app:layout_constraintEnd_toStartOf="@+id/button_toggle_training_angry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:srcCompat="@color/green" />

    <ImageButton
        android:id="@+id/button_toggle_training_angry"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/button_toggle_training_sad"
        app:layout_constraintEnd_toStartOf="@+id/button_toggle_training_sad"
        app:layout_constraintStart_toEndOf="@+id/button_toggle_training_happy"
        app:layout_constraintTop_toTopOf="@+id/button_toggle_training_sad"
        app:srcCompat="@color/red" />

    <Button
        android:id="@+id/button_stop_trainingmodus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="84dp"
        android:background="@android:color/holo_blue_light"
        android:text="Stoppen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_toggle_training_sad" />
</android.support.constraint.ConstraintLayout>