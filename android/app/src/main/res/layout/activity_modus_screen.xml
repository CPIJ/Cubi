<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="62dp"
        android:text="Trainingsmodus"
        android:textColor="@android:color/darker_gray"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_gespreksmodus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_trainingsmodus" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="141dp"
        android:text="Gespreksmodus"
        android:textColor="@android:color/darker_gray"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_gespreksmodus" />

    <ImageButton
        android:id="@+id/button_gespreksmodus"
        android:layout_width="270dp"
        android:layout_height="115dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="62dp"
        android:background="@android:color/holo_blue_dark"
        android:text=""
        app:srcCompat="@drawable/ic_speech_bubble"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/button_trainingsmodus"
        android:layout_width="270dp"
        android:layout_height="115dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="64dp"
        app:srcCompat="@drawable/ic_hat"
        android:layout_marginEnd="62dp"
        android:background="@android:color/holo_blue_dark"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="278dp"
        android:layout_marginBottom="64dp"
        android:text="Modus"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_trainingsmodus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>